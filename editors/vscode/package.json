{
  "name": "ziggy",
  "displayName": "Ziggy",
  "description": "Data serialization language and schema lanugage for clear config files and API messages.",
  "repository": "https://github.com/kristoff-it/ziggy",
  "publisher": "LorisCro",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ziggy",
        "aliases": [
          "Ziggy",
          "ziggy"
        ],
        "extensions": [
          ".ziggy"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "ziggy_schema",
        "aliases": [
          "Ziggy Schema",
          "ziggy schema",
          "ziggy_schema",
          "ziggy-schema",
          "ziggy-schema"
        ],
        "extensions": [
          ".ziggy-schema"
        ],
        "filenames": [
          ".ziggy-schema"
        ],
        "configuration": "./schema.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ziggy",
        "scopeName": "text.ziggy",
        "path": "./syntaxes/ziggy.tmLanguage.json"
      },
      {
        "language": "ziggy_schema",
        "scopeName": "text.ziggy_schema",
        "path": "./syntaxes/schema.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[ziggy]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "LorisCro.ziggy",
        "files.eol": "\n"
      },
      "[ziggy_schema]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "LorisCro.ziggy",
        "files.eol": "\n"
      }
    },
    "configuration": {
      "type": "object",
      "title": "Ziggy",
      "properties": {
        "ziggy.trace.server": {
          "scope": "window",
          "type": "string",
          "description": "Traces the communication between VS Code and the language server.",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off"
        }
      }
    }
  },
  "main": "./out/extension",
  "browser": "./out/extension",
  "extensionDependencies": [
    "ms-vscode.wasm-wasi-core"
  ],
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0"
  },
  "dependencies": {
    "@vscode/vsce": "^2.24.0",
    "@vscode/wasm-wasi-lsp": "^0.1.0-pre.7",
    "esbuild": "^0.12.1",
    "vscode-languageclient": "^10.0.0-next.12"
  },
  "scripts": {
    "vscode:prepublish": "npm run build-base -- --minify",
    "build-base": "esbuild --bundle --external:vscode src/extension.ts --outdir=out --platform=node --format=cjs",
    "build": "npm run build-base -- --sourcemap",
    "watch": "npm run build-base -- --sourcemap --watch",
    "lint": "eslint . --ext .ts"
  }
}